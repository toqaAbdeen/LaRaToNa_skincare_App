<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_settings_imageView_logo">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">285dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:contentDescription">@string/laratona_logo</item>
        <item name="android:src">@drawable/laratona_logo_without_background</item>
    </style>
    <style name="activity_settings_text_app_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-60dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="activity_settings_text_my_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="activity_settings_editText_log_in_sign_up">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:hint">@string/username</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="activity_settings_button_save_changes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:backgroundTint">#FFF4B1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="activity_settings_button_log_out">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">#FF8A65</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>