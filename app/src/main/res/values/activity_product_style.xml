<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_product_imageView_logo">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/app_logo</item>
        <item name="android:src">@drawable/laratona_logo_circle</item>
    </style>

    <style name="activity_product_text_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="activity_product_text_two">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="recycler_view_products">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


</resources>