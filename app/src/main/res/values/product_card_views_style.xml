<resources>
    <style name="product_card_views_style_imageView_product_image">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">450dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="product_card_views_text_product_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_card_views_textView_product_des">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="product_card_views_style_textView_product_price">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">#388E3C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_card_views_textView_product_other">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="product_card_views_textView_product_InventoryCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="product_card_views_imageView_add_delete_product">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/imageview_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="product_card_views_textView_order_quantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="product_card_button_add_to_cart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">#A7F3D0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
