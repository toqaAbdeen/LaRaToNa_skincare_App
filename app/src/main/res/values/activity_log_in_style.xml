<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_log_in_imageView_logo">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginBottom">42dp</item>
        <item name="android:src">@drawable/laratona_logo_circle</item>
    </style>


    <style name="activity_log_in_editText_log_in">
        <item name="android:layout_width">379dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="activity_log_in_checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activity_log_in_button">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:backgroundTint">#FFF4B1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
